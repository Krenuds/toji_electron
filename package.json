{
  "name": "toji3",
  "version": "1.0.0",
  "description": "AI-Powered Development Desktop Application with OpenCode Integration",
  "main": "./out/main/index.js",
  "author": "Toji Development Team",
  "homepage": "https://github.com/krenuds/toji3",
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint --cache .",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "typecheck": "npm run typecheck:node && npm run typecheck:web",
    "start": "electron-vite preview",
    "dev": "electron-vite dev",
    "dev:linux": "electron-vite dev --",
    "build": "npm run typecheck && electron-vite build",
    "postinstall": "electron-builder install-app-deps",
    "build:unpack": "npm run build && electron-builder --dir",
    "build:win": "npm run build && electron-builder --win",
    "build:mac": "electron-vite build && electron-builder --mac",
    "build:linux": "electron-vite build && electron-builder --linux",
    "lint:fix": "eslint --cache . --fix"
  },
  "dependencies": {
    "@chakra-ui/react": "^3.27.0",
    "@discordjs/opus": "^0.10.0",
    "@discordjs/voice": "^0.19.0",
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@opencode-ai/sdk": "^0.9.6",
    "@snazzah/davey": "^0.1.7",
    "adm-zip": "^0.5.16",
    "debug": "^4.4.3",
    "discord.js": "^14.22.1",
    "electron-store": "^10.1.0",
    "electron-window-state": "^5.0.3",
    "express": "^5.1.0",
    "libsodium-wrappers": "^0.7.15",
    "react-icons": "^5.5.0",
    "sodium-native": "^5.0.9",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@electron-toolkit/eslint-config-prettier": "^3.0.0",
    "@electron-toolkit/eslint-config-ts": "^3.0.0",
    "@electron-toolkit/tsconfig": "^1.0.1",
    "@playwright/test": "^1.55.0",
    "@types/adm-zip": "^0.5.7",
    "@types/debug": "^4.1.12",
    "@types/express": "^5.0.3",
    "@types/node": "^22.16.5",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.7.0",
    "dependency-cruiser": "^17.0.2",
    "electron": "^37.2.3",
    "electron-builder": "^25.1.8",
    "electron-vite": "^4.0.0",
    "eslint": "^9.31.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "playwright": "^1.55.0",
    "prettier": "^3.6.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "^5.8.3",
    "vite": "^7.0.5"
  },
  "build": {
    "appId": "com.toji.toji3",
    "productName": "Toji3",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*"
    ],
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools"
    },
    "win": {
      "icon": "build/icon.ico"
    },
    "linux": {
      "icon": "build/icon.png",
      "category": "Development"
    }
  }
}
