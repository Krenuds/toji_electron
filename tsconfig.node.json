{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "include": [
    "electron.vite.config.*",
    "src/main/**/*",
    "src/plugins/**/*",
    "src/preload/**/*.ts"
  ],
  "exclude": ["src/preload/**/*.d.ts", "src/preload/*.d.ts", "src/plugins/discord/commands.old/**/*"],
  "compilerOptions": {
    "composite": true,
    "types": ["electron-vite/node"],
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitAny": true
  }
}
